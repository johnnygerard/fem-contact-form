{
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "express": "^4.19.2",
    "nodemailer": "^6.9.14"
  },
  "devDependencies": {
    "@eslint/js": "^9.7.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.10",
    "@types/nodemailer": "^6.4.15",
    "eslint": "^8.57.0",
    "prettier": "3.3.3",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.16.0"
  },
  "engines": {
    "node": "^20",
    "npm": "^10"
  },
  "scripts": {
    "build": "tsc && cd client && npm ci --include=dev && npm run build && mv dist/fem-contact-form/browser ../public",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "heroku-cleanup": "rm -rf client",
    "lint": "eslint .",
    "reinstall": "npm ci && cd client && npm ci",
    "start": "node dist/server.js",
    "start:dev": "tsc && node --watch --env-file=.env dist/server.js"
  },
  "type": "module"
}
